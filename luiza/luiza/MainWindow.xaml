<Window x:Class="luiza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:luiza"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <TextBox x:Name="login" Height="30" Width="150" Margin="0,0,0,50"/>
        <TextBox x:Name="pass" Height="30" Width="150" Margin="0,50,0,0"/>
        <PasswordBox x:Name="passb" Height="30" Width="150" Margin="0,50,0,0"/>
        <CheckBox x:Name="check" Height="19" Width="110" Content="показать" Margin="0,50,0,0" HorizontalAlignment="Right" Click="CheckBox_Click"/>
        <Button Height="30" Width="150" Margin="0,0,0,70" VerticalAlignment="Bottom" Content="Войти" Click="Button_Click"/>
        <Button Height="30" Width="150" Margin="0,0,0,20" BorderThickness="0" Background="Transparent" VerticalAlignment="Bottom" Click="Button_Click_1">
            <TextBlock Text="Регистрация" TextDecorations="Underline"/>
        </Button>
    </Grid>
</Window>
