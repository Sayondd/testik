<Window x:Class="WpfApp1.red"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="red" Height="450" Width="800">
    <Grid>
        <Label Content="Логин" Height="30" Margin="0,0,0,50"/>
        <Label Content="Пароль" Height="30" Margin="0,50,0,0"/>
        <TextBox x:Name="login" Height="30" Width="150" Margin="0,0,0,50"/>
        <TextBox x:Name="pass" Height="30" Width="150" Margin="0,50,0,0"/>
        <PasswordBox x:Name="passb" Height="30" Width="150" Margin="0,50,0,0"/>
        <CheckBox x:Name="check" Content="Показать" Height="30" Margin="0,60,45,0" HorizontalAlignment="Right" Click="check_Click"/>
        <Button Height="30" Width="150" Margin="0,250,0,0" Content="Зарегистрироваться" BorderThickness="4" Click="Button_Click"/>
    </Grid>
</Window>
