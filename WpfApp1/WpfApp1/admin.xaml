<Window x:Class="WpfApp1.admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="admin" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DGV" Height="300" Width="700" BorderThickness="3" BorderBrush="Black" ItemsSource="{Binding Users}" AutoGenerateColumns="False" ColumnWidth="*">
            <DataGrid.Columns>
                <DataGridTextColumn Header="логин" Binding="{Binding logins}"/>
                <DataGridTextColumn Header="пароль" Binding="{Binding passwords}"/>
                <DataGridTextColumn x:Name="rol" Header="роль" Binding="{Binding idRole}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Удалить" Height="30" Width="150" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="Button_Click"/>
    </Grid>
</Window>
